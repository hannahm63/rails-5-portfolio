<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], :title => "Hannah Melton Portfolio"), sticky: false %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], :title => "Hannah Melton Portfolio"), sticky: false %>
<% else %>
  <%= js add_gritter(flash[:notice], :title => "Hannah Melton Portfolio"), sticky: false %>
<% end %>
