<%= form_for(@portfolio_item) do |form| %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_field :subtitle, class: "form-control" %>
      </div>
    </div>

    <div class="col-md-6">
      <br>
      <div class="form-group">
        <%= form.file_field :main_image %>
      </div>
      <div class="form-group">
        <%= form.file_field :thumbnail_image %>
      </div>
    </div>
  </div>   
  <hr>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :body %>
        <%= form.text_area :body, class: "form-control", rows: 6 %>
      </div>
    </div>
    <div class="col-md-6">
      <div> 
        <%= form.label "Technologies Used" %>
        <%= form.fields_for :technologies do |technology_form| %>
          <%= render 'technology_fields', f: technology_form %>
        <% end %>
        <div>
          <%= link_to_add_association 'Add Technology', form, :technologies %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= form.submit "Save Changes", class: "btn btn-primary btn-block" %>
    </div>
  <% end %>
